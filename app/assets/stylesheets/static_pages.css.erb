.flex-center {
    display: flex;
    justify-content: center;
}

.flex-column {
    display: flex;
    flex-flow: column;
}


.link-header {
    font-weight: bold;
    font-size: 16pt;
}
#main-content {
    margin: 10px 0px 10px 0px;
    font-size: 14pt;
}

#pitch-container {
    flex: 2;
    background-image: url(<%= asset_path 'yard.jpg' %>);
    background-repeat: no-repeat;
    justify-content: flex-start;
    align-items: flex-start;
}

#pitch-text {
    text-align: center;
    background: rgba(0, 0, 0, 0.2);
    color: white;
    font-weight: 900;
    text-shadow: 0px 0px 3px #000;
    padding: 10px;
}


#link-container {
    flex: 1;
}
.link-box {
    flex: 1;
    align-items: center;
    margin-left: 10px;
    margin-bottom: 10px;
    padding: 3px;
}

#scrap-box {
    margin-bottom: 0;
}